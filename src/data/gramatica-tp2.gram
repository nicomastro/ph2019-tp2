#JSGF V1.0;
grammar tp2;

public <grammar> = (<cmd_reproduccion> <item> <nombres> | <cmd_control>);

<cmd_reproduccion> = (reproducir | poner | poné);
<cmd_control> = (pausar | detener | reanudar | continuar | aumentar volumen | bajar volumen );
<item> = (canción de <banda> | algo de <banda> | <cancion> );
<nombres> =  (<banda>);
<cancion> = (el revelde | la bestia pop);
<banda> = (la renga | los redondos | queen);

